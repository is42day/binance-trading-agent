+import os
+import streamlit as st
+
+SESSION_KEY = "ui_auth_ok"
+ROLE_KEY = "ui_role"
+
+def _check_password() -> bool:
+    password = os.getenv("UI_PASSWORD", "")
+    if not password:
+        # No password configured -> allow (dev-friendly). In prod, set UI_PASSWORD.
+        return True
+    if st.session_state.get(SESSION_KEY):
+        return True
+    with st.sidebar:
+        st.markdown("### ðŸ” Login")
+        pw = st.text_input("Password", type="password", placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢")
+        submit = st.button("Sign in")
+    if submit and pw == password:
+        st.session_state[SESSION_KEY] = True
+        return True
+    if submit and pw != password:
+        st.error("Incorrect password.")
+    st.stop()
+
+def _set_role():
+    # Seed role for future RBAC. Default viewer.
+    role = os.getenv("UI_ROLE", "viewer").strip().lower()
+    st.session_state.setdefault(ROLE_KEY, role)
+
+def require_auth():
+    """Gate UI behind a password. Call once near top of web_ui.py."""
+    ok = _check_password()
+    if ok:
+        _set_role()
+
+def current_role() -> str:
+    return st.session_state.get(ROLE_KEY, "viewer")
